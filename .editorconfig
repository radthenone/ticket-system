# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

# Root-level configuration
root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files (Django)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files (Angular)
[*.{js,ts}]
indent_style = space
indent_size = 2
quote_type = single

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS/SCSS files (Angular)
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2
quote_type = double

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Django template files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 4

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Ignore certain directories and files
[{node_modules/**,dist/**,build/**,*.min.*,*.map}]
indent_style = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore

# Django specific
[*.py]
max_line_length = 88
indent_style = space
indent_size = 4

# Angular specific overrides
[{package.json,*.json}]
indent_style = space
indent_size = 2

# TypeScript configuration
[{tsconfig*.json,angular.json}]
indent_style = space
indent_size = 2
